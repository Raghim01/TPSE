model Doc {
  id               Int             @id @default(autoincrement())
  email            String          @unique
  name             String
  surname          String
  password         String
  specialization   SpecializationType
}

model Patient {
  id          Int           @default(autoincrement()) @id
  fullName    String
  idnp        String        @unique()
  diagnostics Diagnostic[]
}

model Diagnostic {
  id              Int     @default(autoincrement()) @id
  title           String
  description     String
  patientId       Int
  patient         Patient @relation(fields: [patientId], references: [id])
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum SpecializationType {
  Cardiology
  Dermatology
  Neurology
  Pediatrics
  Psychiatry
  Radiology
  Surgery
  Oncology
  Gastroenterology
  Orthopedics
}
